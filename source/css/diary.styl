#container
    max-width 90%
    margin 2rem auto 4rem auto

#container #headPart
    display flex
    justify-content flex-start
    align-items center

#container #headPart::before
    content ""
    display inline-block
    background-image url("/images/diary.svg")
    background-size 2rem 2rem
    height 2rem
    width 2rem
    margin-right 1rem

#content h1
    max-width 10%
    padding 10px
    border-radius 10px
    color rgba(193, 193, 193, 0.72)

#content h2
    max-width 6%
    padding 10px
    border-radius 10px
    color #a0d2e6
    margin-left 5px
#content h3
    max-width 5%
    padding 10px
    border-radius 10px
    color rgb(143, 172, 189)
    margin-left 10px

#content blockquote
    opacity .8
    transition opacity 0.5s
#content blockquote:hover
    opacity 1
    transition opacity 0.5s

#content blockquote img
    max-width 10rem
    object-fit contain
    background-repeat none
    margin 5px

p > code
    background rgba(82, 106, 103, 0.84)