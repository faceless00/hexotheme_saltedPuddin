:root
    --main-color #f5f5f7
    --light-main-color #f5f5f7
    --main-background-color rgba(0,0,0,0.92)
    --main-code-background-color rgba(36, 83, 77, 0.84) //rgba(82, 106, 103, 0.84)
    --main-block-background-color #40577bd6
body
    background #1d1d1d
    font-family "Monospace","SF Pro Text","Myriad Set Pro","SF Pro Icons","Helvetica Neue","Helvetica","Arial","sans-serif"
    color white
a
    color var(--main-color)
    text-decoration underline solid white 2px

// `xxx` 的样式
code 
    background var(--main-code-background-color)
    padding 1px 10px 1px 10px
    margin 0 0.5rem 0 0.5rem
    border-radius 5px
blockquote
    background var(--main-block-background-color)
    padding 1px 10px 1px 10px
    margin 1rem
    border-radius 5px

img
 max-width 100%

#paginator::before
  content ""
  display inline-block
  background-image url("/images/book.svg")
  background-size 1em 1em
  width 1em
  height 1em

#paginator
  text-align center
  font-family "Arial"
  margin 5rem 0 5rem 0

#paginator span,#paginator a
  margin 0 10px 0 10px
  color var(--light-main-color)
#paginator span
  font-size 1.3rem

#paginator a
  color #f0cea1
  opacity .8
  text-decoration none
  transition opacity,font-size 0.4s

#paginator a:hover
  font-size 1.3rem
  opacity 1
  transition opacity,font-size 0.4s

//代码块加个顶栏
pre::before
  content ""
  display block
  background #a6ae7b
  opacity .8
  border-radius 10px 10px 0 0