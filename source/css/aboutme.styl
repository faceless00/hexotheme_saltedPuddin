#container
    max-width 60%
    margin 10px auto 10px auto
    text-align center
#mainIcon
    max-width 30%
    transition max-width 1s
#mainIcon:hover
    max-width 15%
    transition max-width 1s

#signature
    font-size 1.2rem


#contactPart .contactItem
    display inline-block
    margin 1em 2em 2em 1em

#contactPart .contactItem > img
    max-width 2em
#contactPart .contactItem > a
    display block

#contactPart .contactItem > a
    text-decoration underline solid gold 3px
    opacity 0.8
    transition opacity,font-size 0.5s
    color #f5f5f7
#contactPart .contactItem > a:hover
    font-size 1.1em
    opacity 1
    transition opacity,font-size 0.5s